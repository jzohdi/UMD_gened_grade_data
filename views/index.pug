extends layout

block content
  header(class="header-content mb-5")
    div(class="container h-100")
      div(class="row h-100 align-items-center py-20")
        div(class="col-lg-12")
          h1(class="display-4 mt-5 mb-2") UMD Gen-Ed Search 
          p(class="mb-5 ") Search for gen eds by year, semester, and department. The results will include the average GPA. 

  div(class="container")
    div(class="row")
      div(class="col-lg-12 mb-5")
        div(class="mb-2")
          label(for="year") Year
          input(class="" type="text" class="form-control" placeholder="ex: 2020" name="year" id="year" aria-label="year" aria-describedby="basic-addon2")
        div(class="mb-2")
          label(for="semester") Semester
          - const semesters = ["spring", "summer", "fall", "winter"]
          select(class="form-control" id="semester" style="display:block;")
            each semester in semesters
              option(value=semester)=semester
        div(class="mb-2")
          label(for="department") Department
          - const departments = ["SCIS", "DSHU", "DSHS", "DSNS", "DSNL", "DSSP","DVCC", "DVUP", "FSAW", "FSAR", "FSMA", "FSOC", "FSPW"]
          select(class="form-control" id="department" style="display:block;")
            each element in departments
              option(value=element)=element
          //- input(class="" type="text" class="form-control" placeholder="DSHU" name="department" id="department" aria-label="department" aria-describedby="basic-addon2")                  
        h2 
          button(id="search-courses" class="btn btn-secondary") Search
          - const myStyles = {"display": "inline-block", "color": "#bf0000", "font-size": "18px"}
          div(id="error-message" style=myStyles class="ml-2")
        hr
        div(id="courses-table")

  script(src="javascripts/scripts.js")